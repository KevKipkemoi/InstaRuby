<div class="profile row">
  <div class="col-md-4 avatar">
    <div class="wrapper">
      <img src="https://www.deviantart.com/lillyrosecraft">
    </div>
  </div>
  <div class="col-md-8 basic-info">
    <div class="user-wrapper">
      <h2 class="username">vek_malek</h2>
      <a class="edit-profile" href="<%= edit_user_path(current_user) %>">
        <button>Edit Profile</button>
      </a>
      <ul class="posts">
        <li><span>12</span> posts</li>
        <li><span>190</span> followers</li>
        <li><span>340</span> following</li>
      </ul>
      <h2 class="name">Vek Malek</h2>
      <a class="website">velka.com</a>
    </div>
  </div>
</div>

<div class="user-tabs">
  <a class="tab active" href="">
    <i class="fa fa-th"></i>POSTS
  </a>
  <a class="tab active" href="">
    <i class="fa fa-tv"></i>IRTV
  </a>
  <a class="tab active" href="">
    <i class="fa fa-bookmark"></i>SAVED
  </a>
  <a class="tab active" href="">
    <i class="fa fa-tag"></i>TAGGED
  </a>
</div>

<div class="user-images">
  <% @posts.each do |post| %>
    <div class="wrapper">
      <%=link_to post_path(post) do%>
        <%=image_tag post.image%>
      <% end %>
    </div>
  <% end %>
</div>
